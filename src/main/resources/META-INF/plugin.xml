<idea-plugin>
    <id>com.vnea.intellij.plugin.quickly-change-editor-font-size-preference</id>
    <name>Quickly Change Editor Font Size Preference</name>
    <vendor url="https://github.com/vnea">vnea</vendor>

    <description>This plugin allows to quickly change editor font size preference.</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.vnea.intellij.plugin.quicklychangeeditorfontsizepreference.action.IncreaseEditorFontSizeAction" class="com.vnea.intellij.plugin.quicklychangeeditorfontsizepreference.action.IncreaseEditorFontSizeAction"
                text="Increase Editor Font Size Preference" description="Quickcly increase editor font size preference">
        </action>
        <action id="com.vnea.intellij.plugin.quicklychangeeditorfontsizepreference.action.DecreaseEditorFontSizeAction" class="com.vnea.intellij.plugin.quicklychangeeditorfontsizepreference.action.DecreaseEditorFontSizeAction"
                text="Decrease Editor Font Size Preference" description="Quickcly decrease editor font size preference">
        </action>
        <action id="com.vnea.intellij.plugin.quicklychangeeditorfontsizepreference.action.ResetEditorFontSizeAction" class="com.vnea.intellij.plugin.quicklychangeeditorfontsizepreference.action.ResetEditorFontSizeAction"
                text="Reset Editor Font Size Preference" description="Quickcly reset editor font size preference">
        </action>
    </actions>
</idea-plugin>
